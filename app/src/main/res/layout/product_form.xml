<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="vertical">
        <EditText
            android:id="@+id/formNameInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/productNameHint"
            android:inputType="text"/>
        <EditText
            android:id="@+id/formCostInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/productCostHint"
            android:inputType="numberDecimal"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/selectTypeLabelText" />
        <Spinner
            android:id="@+id/formTypeInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/productTypes" />
    </LinearLayout>
</RelativeLayout>